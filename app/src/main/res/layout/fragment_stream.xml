<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/fragment_stream">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="1dp"
            android:id="@+id/video_stream"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_get_video_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Video 1"/>
        <Button
            android:id="@+id/button_get_video_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Video 2"/>
        <Button
            android:id="@+id/button_get_video_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Video 3"/>

    </LinearLayout>

</LinearLayout>